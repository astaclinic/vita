#jinja2:variable_start_string:'<<', variable_end_string:'>>'

datacenter = "<< datacenter >>"
data_dir = "/opt/consul"
client_addr = "0.0.0.0"
bind_addr = "{{ GetInterfaceIP `eth0` }}" # Listen on all IPv4
advertise_addr = "{{ GetInterfaceIP `eth0` }}"

# Consul Connect
connect {
  enabled = true
}

ports {
  grpc = 8502
}

ui_config {
  enabled = true
}

server = true
bootstrap_expect = 1
